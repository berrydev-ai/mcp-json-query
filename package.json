{
  "name": "@berrydev-ai/giraffe-orca-mcp",
  "version": "1.0.0",
  "description": "Giraffe Orca MCP Server",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run quality && tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "dxt:init": "dxt init",
    "dxt:pack": "npm run build && npm run dxt:validate && dxt pack . ./extensions/$npm_package_name-$npm_package_version.dxt",
    "dxt:validate": "dxt validate manifest.json",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector dist/index.js --verbose=true --max-results=1000 --workspace=./workspace",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm run version:patch && npm run dxt:pack",
    "release:minor": "npm run version:minor && npm run dxt:pack",
    "release:major": "npm run version:major && npm run dxt:pack",
    "release": "./scripts/release.sh",
    "changelog:add": "./scripts/changelog.sh add",
    "changelog:prepare": "./scripts/changelog.sh prepare",
    "changelog:help": "./scripts/changelog.sh help"
  },
  "bin": {
    "giraffe-orca-mcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/berrydev-ai/giraffe-orca-mcp.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "json-schema-generator": "^2.0.6",
    "jsonpath-plus": "^10.3.0",
    "shx": "^0.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@eslint/compat": "^1.3.1",
    "@types/json-schema-generator": "^2.0.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*",
    "manifest.json"
  ]
}
